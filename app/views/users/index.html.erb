<main>
 <div class="container px-5 px-sm-0">

<!--ユーザーインフォ-->
<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <%= @user.name %>
  <%= @user.introduction %>

  <% if @user == current_user %>
      <%= link_to edit_user_path(@user) do %>
    　<i class="fas fa-user-cog"></i>
    　<% end %>
  <% end %>
</div>

<!--新規投稿-->
<%= render 'books/book', book: @book %>

<h2>Users</h2>

<% @users.each do |user| %>
    <li>
      <%= image_tag user.get_profile_image(100,100) %>
      <%= user.name %>
      <%= link_to 'show', user %>
    </li>
<% end %>

 </div>
</main>