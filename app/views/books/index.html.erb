
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
<!-- ユーザーの詳細? -->
    <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
     <table class="table">
      <tboby>
        <tr>
         <th>name</th>
         <th><%= @user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
        </tr>
      </tbody>
     </table>

 <div class="row">
  <div class="btn btn-outline-secondary btn-block edit_user_path"
      <% if @user == current_user %>
        <%= link_to edit_user_path(@user) do %>
        　<i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>
  </div>
 </div>

<!-- 新規作成 -->
      <%= render 'books/book', book: @book %>
  </div>


<div class="col-md-8 offset-md-1">
     <h2>Books</h2>

  <table class="table table-striped table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>

   <tboby>
      <% @books.each do |book| %>
    <tr>
     <td>
        <%= link_to book_path(book.id) do %>
          <%= image_tag book.get_image %>
        <% end %>
     </td>
     <td>
        <p><%= link_to book.title, book_path(book.id) %></p>
     </td>
     <td>
        <p><%= book.body %></p>
     </td>
    </tr>
        <% end %>
   </tbody>
  </table>
</div>

 </div>
</div>
